{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Séries :</strong>
    <ul>
        {% for program in actor.program %}
            <li><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
        {% else %}
            <li>Aucune série trouvée pour cet acteur</li>
        {% endfor %}
    </ul>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
