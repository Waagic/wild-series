{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Saison{% endblock %}

{% block body %}
    <div class="container-fluid season">
        <h1>Saison {{ season.number }} de {{ program.title }} </h1>
        <div>{{ season.description }}</div>
        <div>Liste des épisodes :
            <ul>
                {% for episode in episodes %}
                    <li><a href="{{ path('wild_show_episode', {'episode': episode.id, 'season': season.id}) }}">{{ episode.title }}</a></li>
                {% endfor %}
            </ul>
        </div>

        <a href="{{ path('wild_index') }}">
            Retour à l'accueil
        </a>
    </div>

{% endblock %}
