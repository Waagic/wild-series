{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <h1>Ajouter une catégorie</h1>
    <ul>
    {% for category in categories %}
            <li>{{ category.name }}</li>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    </ul>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button type="submit" name="btnSearch">Save</button>
    {{ form_end(form) }}
{% endblock %}